<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/neuralFrame"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toTopOf="@+id/vectorFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/neuralImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/blur_ripple"
            app:srcCompat="@mipmap/ic_neural_foreground" />

        <TextView
            android:id="@+id/neuralTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="140dp"
            android:gravity="center"
            android:text="@string/interesting_neural"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/vectorFrame"
        android:layout_width="250dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toTopOf="@+id/cubeFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neuralFrame">

        <ImageView
            android:id="@+id/vectorImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/blur_ripple"
            app:srcCompat="@mipmap/ic_spline_foreground" />

        <TextView
            android:id="@+id/vectorTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="140dp"
            android:gravity="center"
            android:text="@string/interesting_vector"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cubeFrame"
        android:layout_width="250dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vectorFrame">

        <ImageView
            android:id="@+id/cubeImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/blur_ripple"
            app:srcCompat="@mipmap/ic_cube_foreground" />

        <TextView
            android:id="@+id/cubeTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="140dp"
            android:gravity="center"
            android:text="@string/interesting_cube"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>